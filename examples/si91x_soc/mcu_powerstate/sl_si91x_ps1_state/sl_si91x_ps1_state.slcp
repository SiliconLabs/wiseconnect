project_name: sl_si91x_ps1_state
label: SI91x - SL_SI91X_PS1_STATE
description: |
  Demonstrates the PS1 state with NWP shutdown.
category: example|mcu powerstate
package: platform
quality: production
sdk:
  id: simplicity_sdk
  version:  "2024.12.0"
sdk_extension:
  - id: wiseconnect3_sdk
    version: 3.4.0
readme:
  - path: readme.md
source:
  - path: main.c
  - path: app.c
  - path: app.h
  - path: ps1_state.c
  - path: ps1_state.h
toolchain_settings:
  - option: gcc_compiler_option
    value: -Wall -Werror
component:
  - id: sl_system
  - id: status
  - id: syscalls
    from: wiseconnect3_sdk
  - id: si91x_mem_config_3
    from: wiseconnect3_sdk
  - id: sl_power_manager
    from: wiseconnect3_sdk
  - id: ulp_timers_instance
    instance:
      - timer0
    from: wiseconnect3_sdk
  - id: calendar_ulp_component
    from: wiseconnect3_sdk
  - id: timer_ulp_component
    from: wiseconnect3_sdk
  - id: debug_ulp_component
    from: wiseconnect3_sdk
template_contribution:
  - name: user_files_ps2
    value: ps1_state.o
  - name: user_files_ps2
    value: app.o
  - name: user_files_ps2
    value: main.o
define:
  - name: SLI_SI91X_MCU_ENABLE_RAM_BASED_EXECUTION
    value: "1"
  - name: SL_SI91X_ENABLE_LOWPWR_RET_LDO
    value: "1"
  - name: SI_SI91X_NWP_SHUTDOWN
    value: "1"
provides:
  - name: SL_SI91X_PM_STATE_TRANSITION
other_file:
  - path: resources/readme/setupdiagram.png
  - path: resources/readme/ps1_power_plot.png
  - path: resources/readme/ps1_state.png
ui_hints:
  highlight:
  - path: readme.md
    focus: true
post_build:
  path: ../../../../utilities/postbuild_profile/wiseconnect_soc.slpb
