project_name: sl_si91x_uart
package: platform_siwx91x_apps
description: >
  This application demonstrates the usage of UART transmits and receives data
  in full duplex mode.
category: example|peripheral
quality: production
label: SI91x - SL_UART
sdk:
  id: simplicity_sdk
  version:  "2025.6.1"
sdk_extension:
  - id: wiseconnect3_sdk
    version: 4.0.0
component:
  - id: sl_main
  - id: status
  - id: syscalls
    from: wiseconnect3_sdk
  - id: si91x_memory_default_config
    from: wiseconnect3_sdk
  - id: sl_uart
    from: wiseconnect3_sdk
source:
  - path: app.c
  - path: uart_example.c
include:
  - path: .
    file_list:
      - path: app.h
      - path: uart_example.h
toolchain_settings:
  - option: gcc_compiler_option
    value: -Wall -Werror
define:
  - name: SLI_SI91X_MCU_CONFIG_RADIO_BOARD_BASE_VER
other_file:
  - path: resources/readme/setupdiagram.png
  - path: resources/uc_screen/uart_uc.png
  - path: resources/readme/output_console_uart.png
ui_hints:
  highlight:
    - path: readme.md
      focus: true
readme:
  - path: readme.md
post_build:
  path: ../../../../utilities/postbuild_profile/wiseconnect_soc.slpb
