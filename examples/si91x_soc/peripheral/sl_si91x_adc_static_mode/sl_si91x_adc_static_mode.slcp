project_name: sl_si91x_adc_static_mode
label: SI91x - SL_ADC Static Mode
description: >
  Demonstrates how to configure and use the ADC peripheral in static mode on the
  the SiWx917 SoC device.
category: example|peripheral
package: platform
quality: production
sdk:
  id: simplicity_sdk
  version:  "2024.12.0"
sdk_extension:
  - id: wiseconnect3_sdk
    version: 3.4.0
source:
  - path: adc_static_mode_example.c
  - path: app.c
  - path: main.c
  - path: app.h
  - path: adc_static_mode_example.h
toolchain_settings:
  - option: gcc_compiler_option
    value: -Wall -Werror
component:
  - id: sl_system
  - id: status
  - id: syscalls
    from: wiseconnect3_sdk
  - id: si91x_memory_default_config
    from: wiseconnect3_sdk
  - id: sl_adc
    from: wiseconnect3_sdk
  - id: adc_instance
    instance: [channel_1]
    condition: ["device_is_module"]
    from: wiseconnect3_sdk
  - id: adc_instance
    instance: [channel_1]
    condition: ["device_has_chip"]
    from: wiseconnect3_sdk
  - id: adc_instance
    instance: [channel_2]
    condition: ["device_has_915chip"]
    from: wiseconnect3_sdk
define:
  - name: GAIN_OFFSET_CAL_EN
configuration:
  - name: SL_ADC_OPERATION_MODE
    value: SL_ADC_STATIC_MODE
  - name: SL_ADC_CHANNEL_1_SAMPLE_LENGTH
    value: 1
  - name: SL_ADC_CHANNEL_2_SAMPLE_LENGTH
    value: 1
other_file:
  - path: resources/readme/setupdiagram.png
  - path: resources/readme/output.png
  - path: resources/uc_screen/sl_adc_channel_uc_screen.png
readme:
  - path: readme.md
ui_hints:
  highlight: 
    - path: readme.md
      focus: true
post_build:
  path: ../../../../utilities/postbuild_profile/wiseconnect_soc.slpb
