project_name: sl_si91x_calendar
package: platform_siwx91x_apps
description: >
  This application demonstrates how to configure and use the Calendar peripheral on the SiLabs MCU. 
  It includes setting up the calendar module, configuring date and time values, 
  and using the peripheral to manage time-based events or scheduling functionalities effectively.
category: example|peripheral
quality: production
label: SI91x - SL_CALENDAR
sdk:
  id: simplicity_sdk
  version: 2025.12.0
sdk_extension:
  - id: wiseconnect3_sdk
    version: 4.0.0
component:
  - id: sl_main
  - id: status
  - id: syscalls
    from: wiseconnect3_sdk
  - id: si91x_memory_default_config
    from: wiseconnect3_sdk
  - id: sl_calendar
    from: wiseconnect3_sdk
  - id: sl_ulp_timer
    from: wiseconnect3_sdk
source:
  - path: calendar_example.c
  - path: app.c
include:
  - path: .
    file_list:
      - path: app.h
      - path: calendar_example.h
toolchain_settings:
  - option: gcc_compiler_option
    value: -Wall -Werror
other_file:
  - path: resources/readme/setupdiagram.png
  - path: resources/readme/output.png
ui_hints:
  highlight:
    - path: readme.md
      focus: true
readme:
  - path: readme.md
post_build:
  path: ../../../../utilities/postbuild_profile/wiseconnect_soc.slpb
