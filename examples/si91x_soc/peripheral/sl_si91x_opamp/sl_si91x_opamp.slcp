project_name: sl_si91x_opamp
package: platform
description: |
  This application demonstrates how to configure and use the OPAMP features on the Si91x SoC.
category: example|peripheral
quality: production
label: SI91x - SL_OPAMP
sdk:
  id: simplicity_sdk
  version:  "2025.6.1"
sdk_extension:
  - id: wiseconnect3_sdk
    version: 3.5.2
component:
  - id: sl_main
  - id: status
  - id: syscalls
    from: wiseconnect3_sdk
  - id: si91x_memory_default_config
    from: wiseconnect3_sdk
  - id: rsilib_userconfig
    from: wiseconnect3_sdk
  - id: romdriver_egpio
    from: wiseconnect3_sdk
  - id: rsilib_clock_update
    from: wiseconnect3_sdk
  - id: systemlevel_processor_sensor
    from: wiseconnect3_sdk
  - id: systemlevel_wwdt
    from: wiseconnect3_sdk
  - id: rsilib_comparator
    from: wiseconnect3_sdk
  - id: rsilib_opamp
    from: wiseconnect3_sdk
  - id: rsilib_adc
    from: wiseconnect3_sdk
  - id: cmsis_device_config_917
    from: wiseconnect3_sdk
  - id: rsilib_egpio
    from: wiseconnect3_sdk
  - id: opamp_instance
    instance:
      - opamp1
    from: wiseconnect3_sdk
  - id: sl_opamp
    from: wiseconnect3_sdk
  - id: sl_gpio
    from: wiseconnect3_sdk
  - id: sl_bod
    from: wiseconnect3_sdk
source:
  - path: app.c
  - path: opamp_example.c
include:
  - path: .
    file_list:
      - path: app.h
      - path: opamp_example.h
toolchain_settings:
  - option: gcc_compiler_option
    value: -Wall -Werror
define:
  - name: SLI_SI91X_MCU_COMMON_FLASH_MODE
  - name: SL_SI91X_OPAMP
  - name: RSI_M4_INTERFACE
provides:
  - name: si91x_soc   
