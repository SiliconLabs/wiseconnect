project_name: wifi_ble_power_save_ncp
package: wifi_ble
quality: production
label: wifi_station_ble_power_save_ncp
category: Example|Wi-Fi_BLE
description: >
  The coex application demonstrates the procedure about how to configure the device
  in WisConnect coex mode with wlan standby and ble connected power save.
filter:
  - name: "Wireless Technology"
    value: ["WiFi BLE"]
  - name: "Project Difficulty"
    value: ["Intermediate"]
sdk: {id: simplicity_sdk, version:  "2024.12.2"}
sdk_extension: 
- {id: wiseconnect3_sdk, version: 3.4.2}
source:
  - path: app.c
  - path: main.c
  - path: ble_app.c
  - path: wifi_app.c
include:
  - path: .
    file_list:
      - path: app.h
      - path: ble_config.h
      - path: wifi_app.h
define:
  - name: SL_SI91X_PRINT_DBG_LOG
component:
- id: freertos
- id: freertos_heap_4
- id: slist
- id: sl_system
- id: spidrv
  instance: [exp]
- id: bsd_socket
  from: wiseconnect3_sdk
- id: network_manager
  from: wiseconnect3_sdk
- id: basic_network_config_manager
  from: wiseconnect3_sdk
- id: wiseconnect3_common
  from: wiseconnect3_sdk
- id: wifi
  from: wiseconnect3_sdk
- id: sl_si91x_wireless
  from: wiseconnect3_sdk
- id: sl_si91x_asynchronous_socket
  from: wiseconnect3_sdk
- id: sl_si91x_internal_stack
  from: wiseconnect3_sdk
- id: sl_si91x_spi_bus
  from: wiseconnect3_sdk
- id: sl_si91x_basic_buffers
  from: wiseconnect3_sdk
- id: wifi_resources
  from: wiseconnect3_sdk
- id: ble
  from: wiseconnect3_sdk
- id: iostream_retarget_stdio
- id: iostream_recommended_stream
- id: iostream_stdlib_config
- id: device_init
- id: emlib_common
- id: emlib_ldma
toolchain_settings:
  - option: gcc_linker_option
    value: "-u _printf_float"
configuration:
- {name: SL_BOARD_ENABLE_VCOM, value: '1'}
- {name: configTOTAL_HEAP_SIZE, value: '51200'}
- {name: configUSE_POSIX_ERRNO, value: '1'}
